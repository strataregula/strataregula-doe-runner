include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml

# Documentation
recursive-include docs *.md *.rst *.txt
recursive-include docs *.png *.jpg *.svg

# Examples
recursive-include examples *.csv *.yaml *.yml *.json *.py *.md

# Tests
recursive-include tests *.py *.csv *.yaml *.yml *.json

# Source code
recursive-include src *.py *.pyi
recursive-include src *.yaml *.yml *.json *.toml

# Configuration files
include .gitignore
include .pre-commit-config.yaml

# Docker files
recursive-include docker Dockerfile *.yml *.yaml

# CI/CD
recursive-include .github *.yml *.yaml

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude *.dylib
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info/*
global-exclude build/*
global-exclude dist/*
global-exclude .coverage
global-exclude .pytest_cache/*
global-exclude .mypy_cache/*
global-exclude .ruff_cache/*